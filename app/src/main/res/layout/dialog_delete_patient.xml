<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.app.craniowake.view.viewModel.ComplicationViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trashcan_icon_patient"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#DA5F6A"
            android:contentDescription="@string/header_model_red"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/text_dialog_delete_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trashcan_icon_patient"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:hint="@string/delete_patient"
            android:textColor="#ff000000"
            android:textSize="26sp" />
    </RelativeLayout>
</layout>