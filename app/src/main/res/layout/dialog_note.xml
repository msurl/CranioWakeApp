<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.app.craniowake.view.viewModel.NoteViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_note"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/mediumBlue"
            android:contentDescription="@string/header_model_red"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/text_dialog_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_note"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:hint="@string/insert_comment"
            android:textColor="#ff000000"
            android:textSize="26sp" />

        <!-- TODO: Drüber nachdenken, ob man hier einen custom AUTOFILL_HINT erstellen kann, sodass mögliche Eingaben für diese Feld gespeichert werden -->
        <EditText
            android:id="@+id/comment_note"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/text_dialog_note"
            android:ems="10"
            android:text="@={viewmodel.text}"
            android:hint="@string/comment_hint"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_dialog_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_note"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@color/mediumBlue"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ok"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</layout>