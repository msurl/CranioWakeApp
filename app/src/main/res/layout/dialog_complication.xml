<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/warning_icon_emergency"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#DA5F6A"
        android:contentDescription="@string/header_model_red"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@android:drawable/stat_sys_warning" />

    <TextView
        android:id="@+id/text_dialog_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warning_icon_emergency"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/a_complication_has_been_noted"
        android:textColor="#ff000000"
        android:textSize="26sp" />

    <Button
        android:id="@+id/btn_dialog_complication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dialog_emergency"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#DA5F6A"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/ok"
        android:textColor="#FFFFFF" />

</RelativeLayout>